<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="15dp"
    android:layout_marginRight="15dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/TV1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@android:color/holo_orange_dark"></TextView>

        <TextView
            android:id="@+id/TV2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_toRightOf="@id/TV1"></TextView>

        <TextView
            android:id="@+id/TV3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_toRightOf="@id/TV2"
            android:background="@android:color/holo_blue_bright"></TextView>

        <TextView
            android:id="@+id/TV4"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_toRightOf="@id/TV3"
            android:background="@android:color/holo_blue_dark"></TextView>

        <TextView
            android:id="@+id/TV5"
            android:layout_width="30dp"
            android:layout_height="70dp"
            android:layout_toRightOf="@id/TV4"></TextView>

        <TextView
            android:id="@+id/TV6"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_toRightOf="@id/TV5"
            android:background="@color/colorAccent"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/TV1"
            android:layout_marginTop="15dp"
            android:text="@string/text1"></TextView>

    </RelativeLayout>
</ScrollView>